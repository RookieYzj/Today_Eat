.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.usericon{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 5%;
  padding-bottom: 5%;
  border-bottom-left-radius: 24%;
  border-bottom-right-radius: 24%;
}
.login_button{
   width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-repeat:no-repeat;
  background-position: center;
  color:transparent;
}
.userinfo-nickname{
  font-size: 25px;
  padding-left: 10px;
  border-top: 10px;
  
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}